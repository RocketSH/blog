<h2>Hi there, welcome to add a new post.</h2>

<%= form_for @post do |f| %>
  <p>
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %> <br/>
  </p>
  <p>
    <%= f.label :content, "Content" %> <br/>
    <%= f.text_area :content %> <br/>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
